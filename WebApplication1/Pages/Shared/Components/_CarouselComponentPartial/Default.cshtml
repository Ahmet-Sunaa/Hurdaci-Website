@model List<WebApplication1.DAL.Entities.Feature>

<div class="container-fluid p-0 pb-5">
    <div class="owl-carousel header-carousel position-relative">
        @foreach (var item in Model)
        {
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src="@item.Url" alt="">
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(53, 53, 53, .7);">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12 col-lg-8 text-center">
                                <h5 class="text-white text-uppercase mb-3 animated slideInDown">Hurdacı Kralı</h5>
                                <h1 class="display-3 text-white animated slideInDown mb-4">@item.Title</h1>
                                <p class="fs-5 fw-medium text-white mb-4 pb-2">@item.Description</p>
                                <a href="" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">Read More</a>
                                <a href="" class="btn btn-light py-md-3 px-md-5 animated slideInRight">Free Quote</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
